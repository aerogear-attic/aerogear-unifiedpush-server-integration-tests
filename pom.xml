            </properties>
        </profile>

        <!-- Test from staging repository -->
        <profile>
            <id>test-staging</id>
            <properties>
                <ups.source>remote</ups.source>
                <ups.remote.url>https://repository.jboss.org/nexus/content/groups/staging/</ups.remote.url>
